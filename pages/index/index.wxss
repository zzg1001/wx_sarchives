.container {
  background-color: #7ec8e3;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20px;
  box-sizing: border-box;
}

.button-container {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 20px;
  padding: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.button {
  display: flex;
  align-items: center;
  flex-grow: 1; /* 让按钮占据剩余空间 */
}

.icon {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.text {
  font-size: 18px;
}

.tip {
  font-size: 12px;
  color: #ff0000;
  position: absolute;
  top: 10px; /* 根据需要调整 */
  right: 10px; /* 放置在右上角 */
  white-space: nowrap; /* 防止文本换行 */
}

.arrow {
  font-size: 18px;
  color: #64bbcf;
  margin-left: 10px; /* 与按钮之间的间距 */
}

.login-bg {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

.login-bg .login-card {
  position: fixed;
  top: 25%;
  left: 10%;
  background-color: #fff;
  width: 80%;
  border-radius: 5px;
  padding: 16px;
  box-sizing: border-box;
}

.login-bg .login-card .title {
  font-size: 22px;
  padding-bottom: 16px;
  padding-left: 8px;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: center;
}

.login-bg .login-card .summary {
  padding: 8px;
}

.login-bg .login-card .login-btn {
  width: 128px;
  font-size: 14px;
  margin-top: 48px;
  color: #FFF;
  background-color: #00b26a;
}

.login-bg .login-card .userInfo {
  display: flex;
  align-items: center;
  margin-left: 16px;
  margin-top: 16px;
}

.custom-btn {
  -webkit-tap-highlight-color: transparent;
  background-color: #f8f8f8;
  border-radius: 5px;
  box-sizing: border-box;
  color: #000;
  cursor: text;
  display: block;
  font-size: 18px;
  line-height: 2.55555556;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  padding-left: 14px;
  padding-right: 14px;
  position: relative;
  text-align: center;
  text-decoration: none;
}

.mybtn {
  height: 45px;
  color: #000;
  border: 1px solid #ddd;
  margin: 16px 0;
}
.banner {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ff5722; /* 橙色背景 */
  color: #fff; /* 白色文字 */
  padding: 10px 0;
  text-align: center;
  z-index: 1000; /* 确保横幅在最上层 */
}